<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.clockframe.FrameBuilder">

    <Button
        android:id="@+id/bColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ColorPick"/>

    <Button
        android:id="@+id/bExport"
        android:layout_toRightOf="@id/bColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"/>

    <Button
        android:id="@+id/bClearColor"
        android:layout_toRightOf="@id/bExport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UnColor"
        />

    <Button
        android:id="@+id/bClear"
        android:layout_toRightOf="@id/bClearColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        />

    <com.clockframe.ClockFrameView
        android:id="@+id/cfv"
        android:layout_below="@id/bColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvRGB"
        android:text="Code RGB"
        android:textSize="16dp"
        android:layout_below="@+id/cfv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
